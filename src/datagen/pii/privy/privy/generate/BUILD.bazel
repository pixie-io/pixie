load("@privy_deps//:requirements.bzl", "requirement")
load("@rules_python//python:defs.bzl", "py_binary", "py_library")

package(default_visibility = ["//privy:__subpackages__"])

py_binary(
    name = "privy_generate",
    testonly = True,
    srcs = [
        "generate.py",
    ],
    main = "generate.py",
    srcs_version = "PY3",
    deps = [
        "//privy:privy_library",
    ],
)

py_binary(
    name = "privy_visualize",
    testonly = True,
    srcs = [
        "visualize.py",
    ],
    main = "visualize.py",
    srcs_version = "PY3",
    deps = [
        requirement("pandas"),
        requirement("plotly"),
    ],
)

py_binary(
    name = "privy_truncate",
    testonly = True,
    srcs = [
        "truncate.py",
    ],
    main = "truncate.py",
    srcs_version = "PY3",
)

py_library(
    name = "privy_generate_lib",
    testonly = True,
    srcs = [
        "__init__.py",
        "utils.py",
    ],
    srcs_version = "PY3",
)
