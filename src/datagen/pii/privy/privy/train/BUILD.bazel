load("@rules_python//python:defs.bzl", "py_binary", "py_library")

package(default_visibility = ["//privy:__subpackages__"])

py_library(
    name = "privy_train",
    testonly = True,
    srcs = glob([
        "*.py",
        "**/*.py",
    ]),
    srcs_version = "PY3",
)

py_binary(
    name = "privy_flair_ner",
    testonly = True,
    srcs = [
        "flair_ner.py",
    ],
    main = "flair_ner.py",
    srcs_version = "PY3",
    deps = [
        "//privy:privy_library",
        "@rules_python//python/runfiles",
    ],
)
