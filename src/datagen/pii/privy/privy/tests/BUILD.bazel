load("@privy_deps//:requirements.bzl", "requirement")
load("@rules_python//python:defs.bzl", "py_library", "py_test")

package(default_visibility = ["//privy:__subpackages__"])

py_test(
    name = "test_providers",
    srcs = ["test_providers.py"],
    srcs_version = "PY3",
    deps = [
        requirement("hypothesis"),
        "//privy:privy_library",
    ],
)

py_test(
    name = "test_json",
    srcs = ["test_json.py"],
    data = [
        "openapi.json",
        "openapi2.json",
    ],
    srcs_version = "PY3",
    deps = [
        ":test_utils",
        "//privy:privy_library",
    ],
)

py_test(
    name = "test_sql",
    srcs = ["test_sql.py"],
    data = [
        "openapi.json",
        "openapi2.json",
    ],
    srcs_version = "PY3",
    deps = [
        ":test_utils",
        "//privy:privy_library",
    ],
)

py_library(
    name = "test_utils",
    testonly = True,
    srcs = ["utils.py"],
    srcs_version = "PY3",
    deps = [
        requirement("numpy"),
        requirement("pandas"),
    ],
)
