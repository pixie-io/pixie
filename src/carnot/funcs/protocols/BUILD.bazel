load("@bazel_skylib//rules:diff_test.bzl", "diff_test")
load("//bazel:pl_build_system.bzl", "pl_cc_library", "pl_cc_test")

package(default_visibility = ["//src:__subpackages__"])

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = ["**/*_test.cc"],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        "//src/carnot/udf:cc_library",
        "//src/shared/protocols:cc_library",
    ],
)

pl_cc_test(
    name = "protocol_ops_test",
    srcs = ["protocol_ops_test.cc"],
    deps = [
        ":cc_library",
        "//src/carnot/udf:udf_testutils",
    ],
)

diff_test(
    name = "check_amqp.h",
    failure_message = "Please run `bazel run //src/stirling/source_connectors/socket_tracer/protocols/amqp/amqp_code_generator:update_files`",
    file1 = "amqp.h",
    file2 = "//src/stirling/source_connectors/socket_tracer/protocols/amqp/amqp_code_generator:amqp.h",
)
