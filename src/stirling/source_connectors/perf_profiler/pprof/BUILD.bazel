load("@rules_cc//cc:defs.bzl", "cc_proto_library")
load("//bazel:pl_build_system.bzl", "pl_cc_library")

package(default_visibility = ["//src/stirling:__subpackages__"])

cc_proto_library(
    name = "pprof_proto_cc",
    deps = ["@com_github_google_pprof//proto:perftools_profiles_proto"],
)

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = [
            "**/*_test.cc",
        ],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        ":pprof_proto_cc",
    ],
)
