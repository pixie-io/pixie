load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@io_bazel_rules_docker//python3:image.bzl", "py3_image")
load("@rules_pkg//pkg:tar.bzl", "pkg_tar")

package(default_visibility = ["//src/stirling:__subpackages__"])

genrule(
    name = "certs",
    outs = [
        "ca.crt",
        "client.crt",
        "client.key",
        "server.crt",
        "server.key",
    ],
    cmd = """
        $(location //src/common/testing/test_utils/cert_generator:cert_generator) \
        --ca_crt $(location ca.crt) \
        --client_crt $(location client.crt) \
        --client_key $(location client.key) \
        --server_crt $(location server.crt) \
        --server_key $(location server.key) \
        --secret_key_type pkcs8
    """,
    tools = [
        "//src/common/testing/test_utils/cert_generator",
    ],
)

pkg_tar(
    name = "ssl_keys",
    srcs = [
        "ca.crt",
        "client.crt",
        "client.key",
        "server.crt",
        "server.key",
    ],
    mode = "0755",
    package_dir = "/etc/ssl",
    strip_prefix = "/src/stirling/source_connectors/socket_tracer/testing/containers/py_https_server",
)

container_image(
    name = "base_with_ssl",
    base = "@python3_10_base//image",
    symlinks = {
        "/app/src/stirling/source_connectors/socket_tracer/testing/containers/py_https_server/https_server.binary.runfiles/python3_10_x86_64-unknown-linux-gnu/bin/python3": "/usr/bin/python",
        "/usr/bin/python": "/usr/local/bin/python",
    },
    tars = [":ssl_keys"],
)

py3_image(
    name = "base_https_server",
    srcs = ["https_server.py"],
    base = ":base_with_ssl",
    main = "https_server.py",
)

container_image(
    name = "https_server",
    base = ":base_https_server",
    symlinks = {
        "/app/src/stirling/source_connectors/socket_tracer/testing/containers/py_https_server/base_https_server.binary.runfiles/python3_10_x86_64-unknown-linux-gnu/bin/python3": "/usr/bin/python",
    },
)
