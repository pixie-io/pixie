load("@io_bazel_rules_docker//container:image.bzl", "container_image")
load("@io_bazel_rules_docker//container:layer.bzl", "container_layer")

package(default_visibility = ["//src/cloud:__subpackages__"])

container_layer(
    name = "ui_assets",
    directory = "/assets",
    tars = ["//src/ui:ui_bundle"],
)

container_layer(
    name = "installer",
    directory = "/installer",
    files = [
        "//src/pixie_cli:installer_script",
    ],
)

container_layer(
    name = "bundles",
    directory = "/bundles",
    files = [
        "//src/pxl_scripts:script_bundle",
    ],
)

container_layer(
    name = "entrypoint",
    directory = "/scripts",
    files = [
        "entrypoint.sh",
    ],
)

container_image(
    name = "proxy_server_image",
    base = "@openresty//image",
    entrypoint = ["/scripts/entrypoint.sh"],
    layers = [
        ":ui_assets",
        ":installer",
        ":bundles",
        ":entrypoint",
    ],
    visibility = [
        "//k8s:__subpackages__",
        "//src/cloud:__subpackages__",
    ],
)
