pl_proto_library(
    name = "messages_pl_proto",
    srcs = ["messages.proto"],
    visibility = ["//src/vizier:__subpackages__"],
    deps = [
        "//src/api/proto/uuidpb:uuid_pl_proto",
        "//src/carnot/planner/distributedpb:distributed_plan_pl_proto",
