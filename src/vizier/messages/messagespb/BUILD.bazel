        "//src/shared/metadatapb:metadata_pl_proto",
        "//src/shared/types/typespb:types_pl_proto",
        "//src/vizier/services/metadata/storepb:store_pl_proto",
        "//src/vizier/services/shared/agentpb:agent_pl_proto",
