load("@io_bazel_rules_docker//cc:image.bzl", "cc_image")
load("//bazel:pl_build_system.bzl", "pl_cc_binary", "pl_cc_library")

package(default_visibility = ["//src/vizier:__subpackages__"])

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = [
            "**/*_test.cc",
            "*_main.cc",
        ],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        "//src/vizier/services/agent/shared/manager:cc_library",
    ],
)

pl_cc_binary(
    name = "kelvin",
    srcs = ["kelvin_main.cc"],
    stamp = -1,
    deps = [
        ":cc_library",
        "//src/common/signal:cc_library",
        "//src/shared/version:cc_library",
        "//src/shared/version:version_linkstamp",
    ],
)

cc_image(
    name = "kelvin_image",
    base = "//:pl_cc_base_image",
    binary = ":kelvin",
    visibility = [
        "//k8s:__subpackages__",
        "//src/vizier:__subpackages__",
    ],
)
