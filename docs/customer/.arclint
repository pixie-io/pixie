{
  "exclude": [
    "(^yarn.lock$)",
    "(LICENSE)"
  ],
  "linters": {
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "exclude": [
        "(\\.vscode/.*)"
      ],
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "spelling": {
      "type": "spelling",
      "exclude": [
        "(.*\\.crt)",
        "(.*\\.key)"
      ]
    },
    "text": {
      "type": "text",
      "text.max-line-length": 120,
      "exclude": [
        "(\\.arclint$)",
        "(^linters/*)",
        "(\\.js?$)",
        "(\\.css$)",
        "(\\.toml$)",
        "(.*\\.md)",
        "(.*\\.svg)"
      ]
    },
    "eslint": {
      "type": "eslint",
      "bin": "./node_modules/.bin/eslint",
      "eslint.config": "./.eslintrc.json",
      "eslint.env": "browser",
      "include": [
        "(.*\\.(tsx)$)",
        "(.*\\.(ts)$)",
        "(.*\\.(js)$)"
      ]
    }
  }
}
