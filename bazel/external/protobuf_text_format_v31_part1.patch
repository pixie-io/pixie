+// Returns true if truncation occurred.
+bool TruncateStringView(int64_t max_length, absl::string_view* s) {
+  if (max_length > 0) {
+    int64_t excess = static_cast<int64_t>(s->size()) - max_length;
+    if (excess > 0) {
+      s->remove_suffix(excess);
+      return true;
+    }
+  }
+  return false;
